<h1>Listing pessoas</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data nascimento</th>
      <th>Ativo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="table table-condensed">
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.data_nascimento %></td>
        <td><%= pessoa.ativo %></td>
        <td><%= link_to 'Show', pessoa, :class => "btn btn-mini" %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa), :class => "btn btn-mini" %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pessoa', new_pessoa_path, :class => 'btn btn-primary' %>
